{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "ES2015",
        "lib": ["es2022"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "types": ["node", "jest"],
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "incremental": true
    },
    "exclude": ["node_modules"]
}
